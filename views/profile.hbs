<h1>Profile</h1>
<div class="row">
    <div class="col s6">
        <img 
            src="https://yt3.ggpht.com/ytc/AAUvwngkwz02E1Bo_xUOLUsMtYVuGnrXeiEcav9AWcQu=s900-c-k-c0x00ffffff-no-rj" 
            alt="your avatar" 
            class="avatar" 
        >

    </div>
    <div class="col s6">
        <form action="/profile" method="POST">
            <p>Your email: {{user.email}}</p>

            <div class="input-field">
                <input id="name" name="name" type="text" class="validate" value="{{user.name}}" required>
                <label for="name">Name</label>
                <span class="helper-text" data-error="Name can't be empty"></span>
            </div>

            <div class="file-field input-field">
                <div class="btn">
                    <span>Avatar</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>

        
            <button type="submit" class="btn"> Edit profile </button>
        </form>
    </div>
</div>
