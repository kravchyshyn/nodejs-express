<h1>Profile</h1>
<div class="row">
    <div class="col s6">

        {{#if user.avatarUrl}}
            <img 
                src={{user.avatarUrl}}
                alt="avatar-{{user.name}}" 
                class="avatar" 
            >
        {{else}}
            <p>Avatar not exists</p>
        {{/if}}

    </div>
    <div class="col s6">
        <form action="/profile" method="POST" enctype="multipart/form-data">
            <p>Your email: {{user.email}}</p>

            <div class="input-field">
                <input id="name" name="name" type="text" class="validate" value="{{user.name}}" required>
                <label for="name">Name</label>
                <span class="helper-text" data-error="Name can't be empty"></span>
            </div>

            <div class="file-field input-field">
                <div class="btn">
                    <span>Avatar</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn"> Edit profile </button>
        </form>
    </div>
</div>
