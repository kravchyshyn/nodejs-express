<h1>Edit course {{course.title}}</h1>
<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" value="{{course.title}}" required>
        <label for="title">Course title</label>
        <span class="helper-text" data-error="Please fill the title"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" value="{{course.price}}" required min="1">
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Please fill the price"></span>
    </div>

    <div class="input-field">
        <input id="img" name="image" type="text" class="validate" value="{{course.image}}" required>
        <label for="img">Image Url</label>
        <span class="helper-text" data-error="Please fill image url"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button class="btn btn-primary">Edit course </button>
</form>
