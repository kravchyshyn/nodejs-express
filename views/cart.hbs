<h1>Your card</h1>

<div id='cart'>
    {{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Count</th>
                <th><Actions </th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id={{id}}>Remove</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p> <strong>Price:</strong> <span class="price">{{price}}</span></p>

    <form action="/orders" method="POST">
        <button type="submit" class="btn">Make order</button>
    </form>
    {{else}}
        <h3>Cart is empty</h3>
    {{/if}}
</div>
