<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Login</a></li>
        <li class="tab col s6"><a class="active" href="#register">Registration</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
        <h1>Login to system</h1>
        <form action="/add" method="POST">
            <div class="input-field">
                <input id="email" name="email" type="email" class="validate" required>
                <label for="email">Email</label>
                <span class="helper-text" data-error="Please fill the email"></span>
            </div>
            <div class="input-field">
                <input id="password" name="password" type="password" class="validate" required>
                <label for="password">Password</label>
                <span class="helper-text" data-error="Please fill password"></span>
            </div>

            <button class="btn btn-primary" type="submit"> Login </button>
        </form>
    </div>
    <div id="register" class="col s6 offset-s3">
        <h1>Register in system</h1>
        <form action="/add" method="POST">
            <div class="input-field">
                <input id="remail" name="email" type="email" class="validate" required>
                <label for="remail">Email</label>
                <span class="helper-text" data-error="Please fill the email"></span>
            </div>
            <div class="input-field">
                <input id="rpassword" name="password" type="password" class="validate" required>
                <label for="rpassword">Password</label>
                <span class="helper-text" data-error="Please fill password"></span>
            </div>

            <div class="input-field">
                <input id="confirm" name="confirm" type="password" class="validate" required>
                <label for="confirm">Password</label>
                <span class="helper-text" data-error="Please fill password one more time"></span>
            </div>

            <button class="btn btn-primary" type="submit"> Registration </button>
        </form>
    </div>
  </div>
</div>